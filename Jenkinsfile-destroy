pipeline {
    agent {
        node {
            label 'Agent'
        }
    }
    options {
        timeout(time: 1, unit: 'HOURS')
        disableConcurrentBuilds()
    }

    stages {
        stage('VPC Destroy') {
            steps {
                sh """
                    cd 01-vpc
                    terraform init -reconfigure
                    terraform destroy -auto-approve || echo "No VPC resources to destroy"
                """
            }
        }

        stage('S3 Destroy') {
            steps {
                sh """
                    cd 00-terraform-s3
                    terraform init -reconfigure
                    terraform destroy -auto-approve || echo "No S3 resources to destroy"
                """
            }
        }
    }

    post {
        always {
            echo 'Destroy pipeline finished.'
        }
        failure {
            echo 'Destroy pipeline failed â€” please check logs.'
        }
        success {
            echo 'All resources destroyed successfully.'
        }
    }
}
