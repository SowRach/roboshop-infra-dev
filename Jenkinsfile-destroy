pipeline {
    agent {
        node {
            label 'Agent'
        }
    }
    options {
        timeout(time: 1, unit: 'HOURS')
        disableConcurrentBuilds()
    }

    stages {
        stage('Application-ALB') {
            steps {
                sh """
                    cd 05-app-alb
                    terraform init -reconfigure
                    terraform destroy -auto-approve
                """
            }
        }
        stage('Databases') {
            steps {
                sh """
                    cd 04-databases
                    terraform init -reconfigure
                    terraform destroy -auto-approve
                """
            }
        }
        stage('VPN') {
            steps {
                sh """
                    cd 03-vpn
                    terraform init -reconfigure
                    terraform destroy -auto-approve
                """
            }
        }
        stage('SG') {
            steps {
                sh """
                    cd 02-sg
                    terraform init -reconfigure
                    terraform destroy -auto-approve
                """
            }
        }
        stage('vpc') {
            steps {
                sh """
                    cd 01-vpc
                    terraform init -reconfigure
                    terraform destroy -auto-approve
                """
            }
        }

        stage('S3') {
            steps {
                sh """
                    cd 00-terraform-s3
                    terraform init -reconfigure
                    terraform destroy -auto-approve
                """
            }
        }
    }

    post {
        always {
            echo 'Destroy pipeline finished.'
        }
        failure {
            echo 'Destroy pipeline failed â€” please check logs.'
        }
        success {
            echo 'All resources destroyed successfully.'
        }
    }
}
